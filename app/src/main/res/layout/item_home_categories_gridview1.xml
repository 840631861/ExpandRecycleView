<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_categories_relas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_f7f8f9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp">


        <ImageView
            android:id="@+id/allcategore_grideview_image"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allcategore_grideview_image"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/allcategore_grideview_textone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="6dp"
                android:maxLines="2"
                android:text="CWDM DWDM MUX"
                android:textColor="@color/col_666666"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

