<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_f7f8f9"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/categories_expand"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/categories_image"
            android:layout_width="25dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/lab_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/categories_image"
            android:text="WDM Optical Access"
            android:textColor="@color/col_333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/categories_down_image"
            android:layout_width="15dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@mipmap/ic_launcher" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/categories_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/col_7f7f7f"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>